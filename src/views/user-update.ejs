<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>update user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="user-form-container">
                <form method="POST" action="/users/user-update">
                    <div class="pt-3">
                        <h3> Updat user :</h3>
                    </div>
                    <input hidden value="<%= data.id%>" name="id" />
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input value="<%= data.email %>" type="email" class="form-control" name="email" id="email"
                            required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">user name</label>
                        <input value="<%= data.username %>" type="text" class="form-control" name="username"
                            id="username" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">update</button>
                    </div>
                </form>
            </div>
        </div>
</body>

</html>